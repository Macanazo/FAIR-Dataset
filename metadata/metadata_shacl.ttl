@prefix :       <http://fairdatapoint.org/> .
@prefix dash:   <http://datashapes.org/dash#> .
@prefix dcat:   <http://www.w3.org/ns/dcat#> .
@prefix dct:    <http://purl.org/dc/terms/> .
@prefix foaf:   <http://xmlns.com/foaf/0.1/> .
@prefix sh:     <http://www.w3.org/ns/shacl#> .
@prefix xsd:    <http://www.w3.org/2001/XMLSchema#> .

:DatasetShape a sh:NodeShape ;
  sh:targetClass dcat:Dataset ;

  sh:property [
    sh:path dct:title ;
    sh:name "Dataset Title" ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:message "A dataset title is required." ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
    sh:order 1 ;
  ] ;

  sh:property [
    sh:path dct:description ;
    sh:name "Dataset Description" ;
    sh:datatype xsd:string ;
    sh:maxCount 1 ;
    dash:editor dash:TextAreaEditor ;
    dash:viewer dash:LiteralViewer ;
    sh:order 2 ;
  ] ;

  sh:property [
    sh:path dct:publisher ;
    sh:name "Dataset Publisher" ;
    sh:nodeKind sh:BlankNodeOrIRI ;
    sh:node :FoafAgentShape ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:message "Dataset must have a publisher" ;
    dash:editor dash:NodeCreatorEditor ;
    dash:viewer dash:DetailsViewer ;
    sh:order 3 ;
  ] ;

  sh:property [
    sh:path dct:created ;
    sh:name "Creation Date" ;
    sh:datatype xsd:dateTime ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:message "Creation date is required and must be valid." ;
    dash:editor dash:DateTimePickerEditor ;
    dash:viewer dash:LiteralViewer ;
    sh:order 4 ;
  ] ;

  sh:property [
    sh:path dcat:keyword ;
    sh:name "Dataset Keywords" ;
    sh:nodeKind sh:Literal ;
    sh:maxCount 5 ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
    sh:order 5 ;
  ] ;

  sh:property [
    sh:path dct:license ;
    sh:name "Dataset License" ;
    sh:nodeKind sh:IRI ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:message "A license IRI is required for the dataset." ;
    dash:editor dash:URIEditor ;
    dash:viewer dash:LabelViewer ;
    sh:order 6 ;
  ] .

:FoafAgentShape a sh:NodeShape ;
  sh:targetClass foaf:Agent;
  sh:property [
    sh:path foaf:name ;
    sh:name "Name" ;
    sh:datatype xsd:string ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:message "Publisher must have a name." ;
    dash:editor dash:TextFieldEditor ;
    dash:viewer dash:LiteralViewer ;
    sh:order 1 ;
  ] .
